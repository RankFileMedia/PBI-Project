    <script>
        document.getElementById("submit1").addEventListener("click", function() {
            // Check if an option is selected
            var optionSelected = document.querySelector('input[name="option"]:checked');
            if (optionSelected) {
                // Hide the article rectangle and show the "Thank you" message
                document.getElementById("article1").classList.add("hidden");
                document.getElementById("thankYouMessage1").classList.remove("hidden");
            } else {
                alert("Please select an option.");
            }
        });
    </script>
